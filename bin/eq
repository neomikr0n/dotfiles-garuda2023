# â–‘â–ˆâ–‘â–’â–ˆâ–‘â–ˆâ–€â–€â–‘â–ˆâ–‘â–‘â–ˆâ–‘â–ˆâ–‘â–€â–‘â–ˆâ–‘â–‘â–ˆâ–€â–‘â–ˆâ–€â–„â–‘â–ˆâ–„â–„â–€â–‘â–ˆâ–„â–€â–ˆâ–‘â–ˆâ–‘â–’â–ˆâ–‘â–‘   changing parametric eq
# â–‘â–€â–‘â–‘â–€â–‘â–€â–€â–€â–‘â–‘â–€â–€â–‘â–‘â–€â–‘â–‘â–’â–€â–‘â–€â–€â–€â–‘â–€â–‘â–€â–‘â–€â–‘â–€â–€â–‘â–ˆâ–„â–„â–ˆâ–‘â–€â–‘â–‘â–€â–‘â–‘

# VARIABLES:
# whatdateisit=$(date +%Y-%m-%d-%H-%M%S)

# GLOBAL FUNCTIONS:
notification() { # Displays a message
  h="99"    # lenght of the bar of the notification
  t="1900"   # how many miliseconds the notification is shown
  icon="/usr/share/icons/BeautyLine/preferences/scalable/preferences-desktop-notification-bell.svg"

    notify-send --app-name eq -t $t -e -h int:value:$h \
    -u 'normal' \
    -i $icon \
    "$message";
}

# LOCAL FUNCTIONS:
Bocinas() {
  easyeffects -l Bocinas
  message="         BOCINAS "
  notification
}
XS_bass() {
  easyeffects -l XS_bass
  message="         ðŸŽ§ XS bASS ðŸŽ§"
  notification
}
HE400SE_bass() {
  easyeffects -l HE400SE_bass
  message="         ðŸŽ§ HIFIMAN HE400SE bASS ðŸŽ§"
  notification
}
HE400SE_oratory() {
  easyeffects -l HE400SE_oratory
  message="         ðŸŽ§ HIFIMAN HE400SE ORATORY  ðŸŽ§"
  notification
}
SONY1000xm2_bass() {
  easyeffects -l SONY1000xm2_bass
  message="         ðŸŽ§ SONY 1000XM2 bASS  ðŸŽ§"
  notification
}
# Execute functions accordingly
if [[ "$1" == "--Bocinas" ]]; then
  Bocinas
elif [[ "$1" == "--HE400SE_bass" ]]; then
  HE400SE_bass
elif [[ "$1" == "--HE400SE_oratory" ]]; then
  HE400SE_oratory
elif [[ "$1" == "--XS_bass" ]]; then
  XS_bass
elif [[ "$1" == "--SONY1000xm2_bass" ]]; then
  SONY1000xm2_bass
elif [[ "$1" == "--suspend" ]]; then
  suspend
elif [[ "$1" == "--logout" ]]; then
  logout
elif [[ "$1" == "--lock" ]]; then
  lock
fi

