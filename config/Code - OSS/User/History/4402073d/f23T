# Restart
restart() {
notify-send -t 909 -u low -h int:value:80 "⌛ POWERing-OFF... (2)"
}

# Logout
logout() {
notify-send -t 909 -u low -h int:value:80 "⌛ POWERing-OFF... (2)"
}

# Execute accordingly
if [[ "$1" == "--shutdown" ]]; then
  shutdown
elif [[ "$1" == "--restart" ]]; then
  restart
elif [[ "$1" == "--logout" ]]; then
  logout
elif [[ "$1" == "--lock" ]]; then
  lock
fi
